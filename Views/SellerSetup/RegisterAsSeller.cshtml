@{
    Layout = "SellerRegistration_Layout";
    // Layout = "Auth_Layout";
}
@{
    ViewData["Title"] = "RegisterAsSeller";
}
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<!-- Topbar -->
<main class="main">
    <div class="container-fluid vh-100 ">
    <div class="row h-100">
        <!-- Left Side -->
        <div class="col-md-6 bg-info bg-opacity-10 d-none d-md-flex align-items-center">
            <div class="p-5">
                <div class="pb-5">
                    <!-- <h1 class="display-4 mb-5 fw-bold text-primary">Wolmart</h1> -->
                    <img src="~/assets/images/logo.png" alt="">

                </div>

                <div class="d-flex gap-3 mb-4">
                    <i class="bi bi-truck fs-1 text-primary"></i>
                    <div>
                        <h3 class="fw-bold">Fast Delivery</h3>
                        <p class="text-muted">Next-day delivery available for most metro areas</p>
                    </div>
                </div>

                <div class="d-flex gap-3 mb-4">
                    <i class="bi bi-shield-check fs-1 text-success"></i>
                    <div>
                        <h3 class="fw-bold">Secure Payments</h3>
                        <p class="text-muted">100% protected transactions with SSL encryption</p>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <i class="bi bi-percent fs-1 text-danger"></i>
                    <div>
                        <h3 class="fw-bold">Exclusive Deals</h3>
                        <p class="text-muted">Member-only discounts and early access sales</p>
                    </div>
                </div>

                <div class="mt-5 pt-4">
                    <div class="d-flex align-items-center gap-1 mb-2">
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-half text-warning"></i>
                        <span class="ms-2 text-muted">4.8/5 (1.2M reviews)</span>
                    </div>
                    <p class="h5 text-muted">Trusted by 5M+ customers worldwide</p>
                </div>
            </div>
        </div>

        <!-- Right Side -->
        <div class="col-md-6 d-flex align-items-center justify-content-center p-5">
            <div class="w-100" style="max-width: 500px">
                <h2 class="mb-4 fw-bold">Create Seller Account</h2>

                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input type="text" id="firstName" class="form-control" >
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input type="text" id="lastName" class="form-control" >
                        </div>

                        <div class="col-12">
                            <label class="form-label">Email</label>
                            <input type="email" id="email" class="form-control" >
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="text" id="phone" class="form-control">
                        </div>
                        <div class="col-md-6">
                             <label class="form-label">Store Name</label>
                             <input type="text" id="storeName" class="form-control" >
                        </div>
                        <div class="col-md-12">
                             <label class="form-label select2">Store Category</label>
                             <select>
                                   <option value="value">Select Categories</option>
                             </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Enter Password Again</label>
                            <input type="password" id="password" class="form-control" >
                            <div class="form-text">Minimum 8 characters with 1 number</div>
                        </div>
               

                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-2" onclick="RegisterUser()">Create Seller Account</button>
                        </div>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Already have an account? <a asp-controller="Login" asp-action="Login" class="text-decoration-none">
                            Sign
                            In
                        </a>
                    </p>

              
                </div>
            </div>
        </div>
    </div>
</div>
</main>
<script src=""></script>

<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>